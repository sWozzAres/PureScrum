{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Watch.BrowserRefresh": "Debug"
    }
  },
  // Explicit backend URL (override current site)
  "ScrumApiUri": "https://localhost:5001",

  "oidc": {
    "Authority": "https://localhost:5000/",
    "ClientId": "purescrumclient",
    "DefaultScopes": [
      "openid",
      "profile",
      "email",
      "purescrum.client"
    ],
    "PostLogoutRedirectUri": "https://localhost:7289/",
    "RedirectUri": "https://localhost:7289/authentication/login-callback",
    "ResponseType": "code"
  }
}