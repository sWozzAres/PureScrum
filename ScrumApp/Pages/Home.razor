@page "/"
@inject ILogger<Index> Logger
@attribute [AllowAnonymous]

<PageTitle>Home</PageTitle>

<h1>Welcome to PureScrum!</h1>

<figure class="p-3">
    <blockquote class="blockquote">
        <p>Scrum is about people and process in the context of product development.</p>
    </blockquote>
    <figcaption class="blockquote-footer">
        <cite title="About Scrum">Somebody</cite>
    </figcaption>
</figure>

<h3>Features</h3>
<ul>
    <li>Dependency Matrix</li>
    <li>Scrum Board</li>
    <li>Burndown Chart</li>
</ul>

<h4>Technical features</h4>
<ul>
    <li>Timezone aware</li>
    <li>Temporal tables</li>
    <li>Caching (page + server)</li>
    <li>Grpc</li>
</ul>



<div class="row">
    <div class="col-12 text-center">
        <img alt="scrum diagram" src="_content/ScrumApp/images/scrum.png" class="img-fluid" />
    </div>
</div>


@code {
    protected override void OnAfterRender(bool firstRender)
    {
        Logger.LogInformation("Rendering");
    }
}